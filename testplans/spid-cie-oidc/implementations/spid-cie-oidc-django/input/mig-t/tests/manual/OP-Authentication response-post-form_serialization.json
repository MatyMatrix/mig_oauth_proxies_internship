{
  "test suite": {
    "name": "Single test",
    "description": "One test only",
    "filter messages": true
  },
  "tests": [
    {
      "test": {
        "name": "Does the OP accept POST requests and the Form serialization method",
        "description": "An authentication request is sent with the POST method and the parameters (scope, code_challenge, code_challenge_method and request) are inserted in the body of the request, using the application/x-www-form-urlencoded format",
        "type": "active",
        "sessions": [
          "s1"
        ],
        "operations": [
          {
            "session": "s1",
            "action": "start"
          },
          {
            "action": "intercept",
            "from session": "s1",
            "then": "forward",
            "message type": "Authentication request",
            "message operations": [
              {
                "from": "url",
                "save": "client_id",
                "as": "saved_client_id"
              },
              {
                "from": "url",
                "save": "scope=",
                "as": "saved_scope"
              },
              {
                "from": "url",
                "save": "code_challenge",
                "as": "saved_code_challenge"
              },
              {
                "from": "url",
                "save": "code_challenge_method",
                "as": "saved_code_challenge_method"
              },
              {
                "from": "url",
                "save": "request",
                "as": "saved_request"
              }
            ],
            "edit operations": [
              {
                "from": "url",
                "remove": "client_id"
              },
              {
                "from": "url",
                "remove": "response_type"
              },
              {
                "from": "url",
                "remove": "scope"
              },
              {
                "from": "url",
                "remove": "code_challenge"
              },
              {
                "from": "url",
                "remove": "code_challenge_method"
              },
              {
                "from": "url",
                "remove": "request"
              },
              {
                "from": "head",
                "edit regex": "GET",
                "value": "POST"
              },
              {
                "from": "head",
                "add": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              },
              {
                "from": "body",
                "add": "",
                "value": "client_id="
              },
              {
                "from": "body",
                "add": "",
                "use": "saved_client_id"
              },
              {
                "from": "body",
                "add": "",
                "value": "&scope="
              },
              {
                "from": "body",
                "add": "",
                "use": "saved_scope"
              },
              {
                "from": "body",
                "add": "",
                "value": "&code_challenge="
              },
              {
                "from": "body",
                "add": "",
                "use": "saved_code_challenge"
              },
              {
                "from": "body",
                "add": "",
                "value": "&code_challenge_method="
              },
              {
                "from": "body",
                "add": "",
                "use": "saved_code_challenge_method"
              },
              {
                "from": "body",
                "add": "",
                "value": "&request="
              },
              {
                "from": "body",
                "add": "",
                "use": "saved_request"
              }
            ]
          }
        ],
        "result": "correct flow s1"
      }
    }
  ]
}