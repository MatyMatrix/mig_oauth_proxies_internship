{
	"test suite": {
		"name": "Single test",
		"description": "One test only",
		"filter messages": true
	},
	"tests": [
		{
			"test": {
				"name": "Does the issued JWT Access Token contain a correct 'aud' parameter",
				"description": "The Access Token present in the Token Response is analyzed and the value of the 'aud' parameter in the Payload is the identifier of the resource server",
				"type": "active",
				"sessions": [
					"s1"
				],
				"operations": [
					{
						"session": "s1",
						"action": "start"
					},
					{
						"action": "intercept",
						"from session": "s1",
						"then": "forward",
						"message type": "Entity Configuration response OP",
						"decode operations": [
							{
								"from": "body",
								"decode param": "[^\\n\\r]*",
								"type": "jwt",
								"edits": [
									{
										"jwt from": "payload",
										"jwt save": "iss",
										"as": "valid_iss"
									}
								]
							}
						]
					},
					{
						"action": "intercept",
						"from session": "s1",
						"then": "forward",
						"message type": "Token response",
						"decode operations": [
							{
								"from": "body",
								"decode param": "(?<=\"access_token\": \")[^\"]+",
								"type": "jwt",
								"checks": [
									{
										"use variable": "true",
										"in": "payload",
										"check": "$.aud[0]",
										"is": "valid_iss"
									}
								]
							}
						]
					}
				],
				"result": "correct flow s1"
			}
		}
	]
}